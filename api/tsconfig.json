{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "lib",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "ESNext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true
  },
  "compileOnSave": true,
  "include": ["src/**/*"],
}