{
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": "src",
    "outDir": "lib",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "NodeNext",
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true
  },
  "compileOnSave": true,
  "include": ["src/**/*"],
}